<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.conde.cc_contadordecalorias.ui.me.EditActivity"
    android:padding="10dp"
    android:background="@color/white_red">


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="nome"

        android:textColor="@color/dark_marsala"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/imageNome"
        app:layout_constraintEnd_toEndOf="@+id/imageNome"
        app:layout_constraintStart_toStartOf="@+id/imageNome"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageNome"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNome"
        app:srcCompat="@drawable/ic_name_edit" />

    <EditText
        android:id="@+id/editNome"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marileidee"
        app:layout_constraintStart_toEndOf="@+id/imageNome"
        app:layout_constraintBottom_toBottomOf="@+id/imageNome"
        android:maxLength="10"
        android:textColor="@color/dark_marsala"
        android:inputType="textCapWords"
        />


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Idade"
        android:textColor="@color/dark_marsala"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageIdade"
        app:layout_constraintStart_toStartOf="@+id/imageIdade"
        app:layout_constraintTop_toBottomOf="@+id/imageNome" />

    <ImageView
        android:id="@+id/imageIdade"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textIdade"
        app:srcCompat="@drawable/ic_bolo_edit" />

    <EditText
        android:id="@+id/editIdade"
        android:layout_marginStart="2dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="90"
        app:layout_constraintStart_toEndOf="@+id/imageIdade"
        app:layout_constraintBottom_toBottomOf="@+id/imageIdade"
        android:textColor="@color/dark_marsala"
        android:inputType="number"
        android:maxLength="2"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Altura"
        android:textColor="@color/dark_marsala"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageAltura"
        app:layout_constraintStart_toStartOf="@+id/imageAltura"
        app:layout_constraintTop_toBottomOf="@+id/imageIdade" />

    <ImageView
        android:id="@+id/imageAltura"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAltura"
        app:srcCompat="@drawable/ic_height__edit" />

    <EditText
        android:id="@+id/editAltura"
        android:layout_marginStart="2dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="175"
        app:layout_constraintStart_toEndOf="@+id/imageAltura"
        app:layout_constraintBottom_toBottomOf="@+id/imageAltura"
        android:textColor="@color/dark_marsala"
        android:inputType="number"
        android:maxLength="3"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Peso"
        android:textColor="@color/dark_marsala"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imagePeso"
        app:layout_constraintStart_toStartOf="@+id/imagePeso"
        app:layout_constraintTop_toBottomOf="@+id/imageAltura" />

    <ImageView
        android:id="@+id/imagePeso"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPeso"
        app:srcCompat="@drawable/ic_peso_edit" />

    <EditText
        android:id="@+id/editPeso"
        android:layout_marginStart="2dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="81.2"
        app:layout_constraintStart_toEndOf="@+id/imagePeso"
        app:layout_constraintBottom_toBottomOf="@+id/imagePeso"
        android:textColor="@color/dark_marsala"
        android:inputType="numberDecimal"
        android:maxLength="5"

        />


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GÃªnero"
        android:textColor="@color/dark_marsala"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageGenero"
        app:layout_constraintStart_toStartOf="@+id/imageGenero"
        app:layout_constraintTop_toBottomOf="@+id/imagePeso" />

    <ImageView
        android:id="@+id/imageGenero"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textGenero"
        app:srcCompat="@drawable/ic_gender_edit" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_weight="1"
        android:gravity=""
        app:layout_constraintStart_toEndOf="@id/imageGenero"
        app:layout_constraintBottom_toBottomOf="@id/imageGenero"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioMasculino"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/radioFeminino"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="Feminino" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="anos"
        app:layout_constraintBottom_toBottomOf="@+id/editIdade"
        app:layout_constraintStart_toEndOf="@+id/editIdade"
        app:layout_constraintTop_toTopOf="@+id/editIdade"
        android:textColor="@color/dark_marsala"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        app:layout_constraintBottom_toBottomOf="@+id/editAltura"
        app:layout_constraintStart_toEndOf="@+id/editAltura"
        app:layout_constraintTop_toTopOf="@+id/editAltura"
        android:textColor="@color/dark_marsala"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        app:layout_constraintBottom_toBottomOf="@+id/editPeso"
        app:layout_constraintStart_toEndOf="@+id/editPeso"
        app:layout_constraintTop_toTopOf="@+id/editPeso"
        android:textColor="@color/dark_marsala"
        />


    <Button
        android:id="@+id/buttonSalvar"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSalvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/jeff" />


</androidx.constraintlayout.widget.ConstraintLayout>